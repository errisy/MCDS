<e:MultipleItemBoxBase x:Class="MultipleItemBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:e="clr-namespace:Errisy"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <e:MultipleItemBoxBase.Template>
        <ControlTemplate TargetType="e:MultipleItemBoxBase">
            <WrapPanel Name="_WrapPanel">
                <TextBox Name="_TextBox">
                    <e:AutoCompletePopup.AutoComplete>
                        <e:AutoCompletePopup x:Name="_AutoComplete"/>
                    </e:AutoCompletePopup.AutoComplete>
                </TextBox>
            </WrapPanel>
        </ControlTemplate>
    </e:MultipleItemBoxBase.Template>
</e:MultipleItemBoxBase>
